<Window x:Class="Trustsoft.WideHotkeys.Wpf.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WPF global hot key demo app"
        Width="418"
        Height="264">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBox" />
        <TextBlock Grid.Row="1"
                   Margin="0,6,0,0"
                   Text="Registered hotkeys: Ctrl+Alt+S, Ctrl+Alt+D"
                   TextWrapping="Wrap" />

    </Grid>
</Window>
